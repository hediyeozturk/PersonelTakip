@model PT.Entity.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Login";
}
<div class="row">
    <div class="col-md-offset-3 ">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <hr />
            <div class="form-group">
                @Html.LabelFor(x => x.Username)
                @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Kullanıcı Adı" })
                @Html.ValidationMessageFor(x=>x.Username)
            </div>


            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", placeholder = "Şifre", type = "password" })
            </div>

            <div>
                @Html.LabelFor(x=>x.RememberMe)
                @Html.CheckBoxFor(x=>x.RememberMe)
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <input type="submit" value="Kayıt Ol" class="btn btn-block btn-success" />
                    @Html.ActionLink("Üye değil iseniz", "Register", "Account")
                </div>
            </div>
            <div class="col-md-6 col-md-offset-0">
                <div class="panel">
                    <div class="text-center text-danger">
                        @Html.ValidationSummary()
                    </div>
                </div>
            </div>
        }
    </div>

</div>
